<div class="container mt-5">
  <h2 class="mt-3">Your Characters</h2>
  <% @user.characters.each do |char| %>
    <div class="card-char mb-3">
      <%= cl_image_tag("https://res.cloudinary.com/dmilkgxzg/image/upload/v1738069681/dnd_default_char_inyo1c.png", class: 'char-img') %>
      <div class="card-char-content">
        <div class="card-char-infos">
          <h2><%= link_to char.name, char %></h2>
          <p>Level <%= char.level %> <%= char.classname %></p>
          <p>Game: <%= char.game.title %></p>
        </div>
        <a href="<%= char %>" class="char-button"><i class="fa-solid fa-eye"></i></a>
        <a href="<%= edit_character_path(char) %>" class="char-button"><i class="fa-solid fa-pen-to-square"></i></a>
        <%= link_to character_path(char), class: "char-button", data: { turbo_method: "delete", turbo_confirm: "Are you sure?" } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
